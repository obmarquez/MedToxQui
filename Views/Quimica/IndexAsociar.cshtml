@model IEnumerable<MedToxQui.Models.Consultas.ConsultasModel>

@{
    ViewData["Title"] = "IndexAsociar";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <form method="post" asp-controller="Quimica" asp-action="AsociacionMultiple">
                    <div class="ibox-title">
                        <h5>Asociación de Evaluados </h5>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-6 m-b-xs">
                                <select class="form-control" asp-items="@(new SelectList(ViewBag.losQuimicos, "Nombre", "NombreUsuario"))" id="super" name="super">
                                    <option>Seleccione supervisor ocular</option>
                                </select>
                            </div>
                            <div class="col-sm-6 m-b-xs">
                                <select class="form-control" asp-items="@(new SelectList(ViewBag.losQuimicos, "Nombre", "NombreUsuario"))" id="procesa" name="procesa">
                                    <option>Seleccione quien procesa muestra</option>
                                </select>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>IdH</th>
                                        <th>Evaluado </th>
                                        <th>Evaluación </th>
                                        <th>Estatus </th>
                                        <th>Sup</th>
                                        <th>Fecha</th>
                                        <th>Genero</th>
                                        <th>FPE</th>
                                        <th>Gaf</th>
                                        <th>Gpo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><input type="checkbox" class="i-checks" name="input" value="@item.idhistorico"></td>
                                            <td>@Html.DisplayFor(modelITem => item.idhistorico)</td>
                                            <td>@Html.DisplayFor(modelITem => item.evaluado)</td>
                                            <td>@Html.DisplayFor(modelITem => item.evaluacion)</td>
                                            <td>@Html.DisplayFor(modelITem => item.usertox)</td>
                                            <td>@Html.DisplayFor(modelITem => item.fecha)</td>
                                            <td>@Html.DisplayFor(modelITem => item.sexo)</td>
                                            <td>@Html.DisplayFor(modelITem => item.fechaCus)</td>
                                            <td>@Html.DisplayFor(modelITem => item.gafete)</td>
                                            <td>@Html.DisplayFor(modelITem => item.grupo)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="ibox-footer">
                        <button type="submit" class="btn btn-primary">Asociar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts
{

    @*css*@
    <link href="~/css/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    <link href="~/css/plugins/iCheck/custom.css" rel="stylesheet" />

    @*js*@
    <script src="~/js/plugins/iCheck/icheck.min.js"></script>
    <script src="~/js/plugins/sweetalert/sweetalert.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
}